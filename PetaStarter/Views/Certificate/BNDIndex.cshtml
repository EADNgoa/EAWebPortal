@model PagedList.IPagedList<PanchayatWebPortal.BNDcert>
@using PagedList.Mvc;


<center>
   

    @if (ViewBag.RegisterTypeID == 39)
    {
        <h2 class="section-to-print"><b>Birth Certificate</b></h2>

    }
    else
    {
        <h2 class="section-to-print"><b>Death Certificate</b></h2>

    }


   
</center>

<p>

    @Html.ActionLink("Create New", "BNDManage",new {rt = ViewBag.RegisterTypeID })
</p>
<table class="table">
    <tr>
        <th>
         Sr No
        </th>
      @if (ViewBag.RegisterTypeID==39)
      {
        <th>
          Child Name
        </th>
      }
      else
      {
          <th>Name Of Deceased</th>
      }

        <th>
         Gender
        </th>
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Date Of Birth
            </th>
        }
        else
        {
            <th>
                Date Of Death
            </th>
        }
       
        <th>
         Application Date
        </th>
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Place Of Birth(in House)
            </th>
            <th>
                Place Of Birth(in Hospital)
            </th>
        }
        else
        {
            <th>
                Place Of Daath(in House)
            </th>
            <th>
                Place Of Death(in Hospital)
            </th>
        }
      
        <th>
        Name Of Mother          
        </th>
        <th>
            UID No. Of Mother
        </th>
        <th>
        Name Of Father
        </th>

        <th>
        UID No. OF Father
        </th>
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Grand Father
            </th>
        }
        else
        {
            <th>
                Name Of Husband/Wife(if any)
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Grand Mother
            </th>
        }
        else
        {
            <th>
                UID No. of husband/wife
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Address of Parents at Birth of Child
            </th>
        }
        else
        {
            <th>
                Address of Deceased at the time of death
            </th>
        }
      
      
        <th>
            Permanant Address
        </th>
        <th>
            Informants Name
        </th>
        <th>
            Informant Address
        </th>
        <th>
            Name Of Town
        </th>
        <th>
            Is Town?
        </th>
        <th>
            Name Of District
        </th>
        <th>
            Name Of State
        </th>
        <th>
            Religion Of Family
        </th>
        <th>
            Any Other Religion
        </th>
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Father's Education Level
            </th>
        }
        else
        {
            <th>
               Occupation of the deceased
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
        <th>
            Mother's Education Level
        </th>
        }
        else
        {
            <th>
               Was the cause of death Medically Certified?
            </th>
        }

        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Father's Occupation
            </th>
        }
        else
        {
            <th>
               Name Of diesease or actual cause of death
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Mother's Occupation
            </th>
        }
        else
        {
            <th>
                if female,was death occured during pregnancy
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Age Of Mother at the time of Marraige
            </th>
        }
        else
        {
            <th>
               If used to habitually smoke for how many years?
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Age Of Mother at the time of Child Birth
            </th>
        }
        else
        {
            <th>
                If used to chew Tobacoo for how many years?
            </th>
        }
        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                No. Of Child
            </th>
        }
        else
        {
            <th>
                If used to habitually drink Alcohol for how many years?
            </th>
        }
   
    
        <th>
            Attention Type
        </th>
        @if (ViewBag.RegisterTypeID == 39) {
        <th>
            Delivery Method
        </th>
        }

        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Birth Weight
            </th>
        }
        else
        {
            <th>
                If Used to chew drink alcohol for how many years(e.g 1,2,3)
            </th>
        }

        @if (ViewBag.RegisterTypeID == 39)
        {
            <th>
                Duration Of Pregnancy
            </th>
        }
     
        <th>
         Status
        </th>
      
        <th></th>

    </tr>
    @{int i = 1; }
@foreach (var item in Model) {
    <tr>
        <td>
           @i
        </td>
     
        <td>
            @item.ChildName
        </td>
        <td>
            @item.Gender
        </td>
        <td>
            @(String.Format("{0:dd-mm-yyyy}", item.DateOfBirth))
           
        </td>
        <td>
            @(String.Format("{0:dd-mm-yyyy}", item.TDate))
        </td>
        <td>
            @item.PlaceOfBirth
        </td>
        <td>
            @item.PlaceOfBirthHouse
        </td>
        <td>
            @item.NameOfMother
        </td>
        <td>
            @item.UIDmother
        </td>
        <td>
            @item.NameOfFather   
        </td>
       
        <td>
            @item.UIDfather
        </td>
        <td>
            @item.GrandFather
        </td>
        <td>
            @item.GrandMother
        </td>
        <td>
            @item.AddressParentsBirth
        </td>
        <td>
            @item.PermAddress
        </td>
        <td>
            @item.InformantsName
        </td>
        <td>
            @item.InformantAddress
        </td>
        <td>
            @item.NameOfTown
        </td>
        <td>
            @item.TownOrVillage
        </td>
        <td>
            @item.NameOfDistrict
        </td>
        <td>
            @item.NameOfState
        </td>
        <td>
            @item.ReligionOfFamily
        </td>
        <td>
            @item.AnyOtherReligion
        </td>
        <td>
            @item.FEduc
        </td>
        <td>
            @item.MEduc
        </td>
        <td>
            @item.FOccup
        </td>
        <td>
            @item.MOccup
        </td>
        <td>
            @item.AgeOfMotherMarraige
        </td>
        <td>
            @item.AgeOfMotherBirth
        </td>
        <td>
            @item.NoOfChild
        </td>
        <td>
            @item.AttentionType
        </td>
        @if (ViewBag.RegisterTypeID == 39)
        {
        <td>
            @item.DeliveryMethod
        </td>
        }
        <td>
            @item.BirthWeight
        </td>
        @if (ViewBag.RegisterTypeID == 39)
        {
        <td>
            @item.DurationOfPregnancy
        </td>
        }
        <td>
            @item.Status
        </td>
        <td>
            @Html.ActionLink("Edit", "BNDManage", new { id=item.BNDID,rt = item.RegisterTypeID }) 
        </td>
    </tr>
    i++;
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page}))