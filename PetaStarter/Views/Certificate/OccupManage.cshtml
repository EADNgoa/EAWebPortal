@model  OccupationCertDet

@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>


@using (Html.BeginForm(Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.RegisterTypeID)
    @Html.HiddenFor(model => model.WEBstatusID)

    <div class="form-horizontal">      
            <h4> Residence Certificate</h4>  
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (Model?.OccupationCertificateID >0)
        {
            @Html.HiddenFor(model => model.OccupationCertificateID)
        }

        <table class="table" style="width:300px;height:auto;margin-left:30px">
            <thead><b>Document Requirements</b></thead>
            <tr>
                <td>

                </td>
                <th>
                    Sr No
                </th>
                <th>
                    Document Name
                </th>
            </tr>
            @{int i = 1; }
            @foreach (var item in ViewBag.CertReq)
            {
                <tr>
                    <td></td>
                    <td>
                        @i
                    </td>
                    <td>
                        @item.CertificateName
                    </td>
                </tr>
                i++;
            }


        </table>
        <br /><br />
        <span>
            <strong><u>Please fill your form:-</u></strong>
        </span>
        <br />
        <br />
        <div class="form-group">
            <label class="control-label col-md-2">Person Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PersonName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Person Address</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.PersonAddress, 4, 43, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PersonAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Building Details</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.BuildingDetails,4,43, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BuildingDetails, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Const Lic No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConstLicNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConstLicNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Const Lic Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConstLicDate, new { htmlAttributes = new {@type="date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConstLicDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Survey No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SurveyNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SurveyNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Plot No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlotNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PlotNumber, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
            <label class="control-label col-md-2">Ref No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RefNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RefNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ref Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RefDate, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RefDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Health Service Ref No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HSref, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HSref, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Health Service Ref Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HSrefdate, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HSrefdate, "", new { @class = "text-danger" })
            </div>
        </div>
    
     
        @if (Model.OccupationCertificateID == 0)
        {
            <div class="form-group">
                <label class="control-label col-md-2">Upload Documents</label>
                <div class="col-md-10">
                    <input class="form-control" type="file" id="UploadedFile" name="UploadedFile" />
                    <small>(Upload all your documents in zip folder)</small>
                </div>
            </div>
        }
     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "OccupIndex", new { rt = 33})
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
}
