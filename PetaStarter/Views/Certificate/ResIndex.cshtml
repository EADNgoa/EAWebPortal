@model PagedList.IPagedList<PanchayatWebPortal.ResidenceCert>
@using PagedList.Mvc;


<center>
   

 @if (ViewBag.RegisterTypeID == 26)
 {
    <h2 class="section-to-print"><b>Residence Certificate</b></h2>

 }
 else
 {
    <h2 class="section-to-print"><b>Birth and Death Certificate</b></h2>

 }



</center>

<p>

    @Html.ActionLink("Create New", "ResManage",new {rt = ViewBag.RegisterTypeID })
</p>
<table class="table">
    <tr>
        <th>
         Sr No
        </th>
        <th>
        Name
        </th>
        @if (ViewBag.RegisterTypeID == 26)
        {
            <th>
                Birth Date
            </th>
            <th>
                Birth Place
            </th>
            <th>
                Name Of Mother
            </th>
            <th>
                Name Of Father
            </th>

        }
        else
        {
            <th>
                Birth/Death Date
            </th>
            <th>
                Death Place
            </th>
            <th>
                Birth/Death Of
            </th>
            <th>
                Registration No
            </th>
        }
       
    
  
     
        <th>
        Address          
        </th>
        @if (ViewBag.RegisterTypeID == 26) {
        <th>
        Living Since
        </th>

        }
        else
        {
            <th>
                
                Registration Date
            </th>
        }
        <th>
            IsDead?
        </th>
        <th>
         Status
        </th>
      
        <th></th>

    </tr>
    @{int i = 1; }
@foreach (var item in Model) {
    <tr>
        <td>
           @i
        </td>
     
        <td>
            @item.PersonName
        </td>
        <td>
            @(String.Format("{0:dd-mm-yyyy}", item.BirthDate))
           
        </td>
        <td>
            @item.BirthPlace
        </td>
        <td>
            @item.NameOfMother
        </td>
        <td>
            @item.NameOfFather
        </td>
        <td>
            @item.Address
        </td>
        @if (ViewBag.RegisterTypeID==26)
        {
        <td>
            @item.Since   
        </td>
        }
        <td>
            @item.IsDead
        </td>
        <td>
            @item.Status
        </td>
        <td>
            @Html.ActionLink("Edit", "ResManage", new { id=item.ResidenceCertificateID,rt = item.RegisterTypeID }) 
        </td>
    </tr>
    i++;
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page}))